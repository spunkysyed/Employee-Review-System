<link rel="stylesheet" href="/css/signUp.css" />
<main>
  <div class="main-div-signup-one">
    <div>
      <% if(!locals.user){%>
      <h1 style="color: white">Have an account?</h1>
      <p
        style="
          color: white;
          font-weight: 400;
          font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI',
            Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue',
            sans-serif;
          font-style: italic;
        "
      >
        By Clicking Join Now, You Agree to the Terms and Conditions,UserPolicy
        and User Agreements
      </p>
      <a href="/users/signin"> Sign In</a>
      <%}else{%>
      <h1 style="color: white; font-size: 1.8rem; transform: translateY(80px);">Register an employee</h1>
      <%}%>
    </div>
  </div>
  <div class="main-div-signup">
    <h1>Sign Up</h1>
    <hr />
    <form action="/users/create" method="POST">
      <label for="name">Name</label>
      <input type="text" id="username" name="name" required />
      <label for="email">Email</label>
      <input type="email" id="email" name="email" required />
      <label for="password">Password</label>
      <input type="password" id="password" name="password" required />
      <label for="confirm_password">Confirm Password</label>
      <input
        type="password"
        id="confirm_password"
        name="confirm_password"
        required
      />
      <input type="hidden" name="permission" value="employee" />
      <button type="submit">Login</button>
    </form>
  </div>
</main>
